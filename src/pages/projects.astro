import BaseLayout from "../layouts/BaseLayout.astro";
import { obtenerProyectos } from "../utils/googleSheets.ts";

// Obtener los proyectos desde Google Sheets
const proyectos = await obtenerProyectos();

// Funci칩n para obtener color de badge basado en la tecnolog칤a
function obtenerColorTecnologia(tech: string) {
  const techColors: { [key: string]: string } = {
    'React': 'Shiraz',
    'WebGL': 'daisy_bush', 
    'Flutter': 'Shiraz',
    'Firebase': 'daisy_bush',
    'Python': 'cod_gray',
    'Arduino': 'Shiraz',
    'Next.js': 'Shiraz',
    'MongoDB': 'daisy_bush',
    'Machine Learning': 'Shiraz',
    'Django': 'daisy_bush',
    'D3.js': 'Shiraz',
    'PostgreSQL': 'daisy_bush',
    // Agregar m치s tecnolog칤as seg칰n necesites
  };
  
  return techColors[tech] || 'cod_gray';
}

// Obtener a침os 칰nicos para el filtro
const a침osUnicos = [...new Set(proyectos.map(proyecto => proyecto.a침o))].sort();

// Obtener estados 칰nicos para el filtro
const estadosUnicos = [...new Set(proyectos.map(proyecto => proyecto.estado))].sort();

// Obtener tecnolog칤as 칰nicas para el filtro
const tecnologiasUnicas = [...new Set(proyectos.flatMap(proyecto => proyecto.tecnologias))].sort();

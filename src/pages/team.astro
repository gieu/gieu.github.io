---
import BaseLayout from "../layouts/BaseLayout.astro";
import Contact from "../components/common/Contact.astro";
---

<BaseLayout title="Equipo - GIEU - Grupo de Investigación en Informática Educativa">
    <main>
        <!-- Hero Section -->
        <section
            class="bg-gradient-to-br from-cod_gray-900 via-cod_gray-800 to-cod_gray-900 relative overflow-hidden py-24"
            aria-label="Sección principal del equipo"
        >
            <!-- Background Pattern -->
            <div class="absolute inset-0 opacity-10">
                <div class="absolute top-10 left-10 w-32 h-32 bg-Shiraz-400 rounded-full blur-3xl"></div>
                <div class="absolute bottom-20 right-20 w-40 h-40 bg-daisy_bush-400 rounded-full blur-3xl"></div>
                <div class="absolute top-1/2 left-1/3 w-24 h-24 bg-Shiraz-600 rounded-full blur-2xl"></div>
            </div>

            <div class="max-w-[1140px] mx-auto px-10 relative z-10">
                <div class="text-center">
                    <h1 class="text-5xl md:text-6xl font-bold text-white mb-6">
                        Nuestro <span class="bg-gradient-to-r from-Shiraz-400 to-daisy_bush-400 bg-clip-text text-transparent">Equipo</span>
                    </h1>
                    <p class="text-xl text-cod_gray-300 max-w-3xl mx-auto leading-relaxed">
                        Conoce a los investigadores, docentes y estudiantes que hacen posible 
                        la transformación de la educación STEM en Colombia y la región.
                    </p>
                </div>
            </div>
        </section>

        <!-- Team Leaders Section -->
        <section class="bg-cod_gray-50 py-20" aria-label="Líderes del equipo">
            <div class="max-w-[1140px] mx-auto px-10">
                <div class="text-center mb-16">
                    <h2 class="text-4xl font-bold text-cod_gray-900 mb-4">Líderes del Grupo</h2>
                    <p class="text-lg text-cod_gray-700 max-w-2xl mx-auto">
                        Los investigadores principales que dirigen nuestras líneas de investigación
                    </p>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                    <!-- Team Leader 1 -->
                    <div class="team-card group">
                        <div class="team-card-inner">
                            <div class="team-image-container">
                                <div class="team-image-placeholder">
                                    <span class="team-initials">DR</span>
                                </div>
                                <div class="team-image-overlay"></div>
                            </div>
                            <div class="team-info">
                                <h3 class="team-name">Director del Grupo</h3>
                                <p class="team-title">Investigador Principal</p>
                                <p class="team-description">
                                    Especialista en tecnología educativa y metodologías de enseñanza STEM
                                </p>
                                <div class="team-expertise">
                                    <span class="expertise-tag">Educación STEM</span>
                                    <span class="expertise-tag">Tecnología Educativa</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Team Leader 2 -->
                    <div class="team-card group">
                        <div class="team-card-inner">
                            <div class="team-image-container">
                                <div class="team-image-placeholder">
                                    <span class="team-initials">CO</span>
                                </div>
                                <div class="team-image-overlay"></div>
                            </div>
                            <div class="team-info">
                                <h3 class="team-name">Coordinador Académico</h3>
                                <p class="team-title">Investigador Senior</p>
                                <p class="team-description">
                                    Experto en pedagogía digital y desarrollo de competencias matemáticas
                                </p>
                                <div class="team-expertise">
                                    <span class="expertise-tag">Pedagogía Digital</span>
                                    <span class="expertise-tag">Matemáticas</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Team Leader 3 -->
                    <div class="team-card group">
                        <div class="team-card-inner">
                            <div class="team-image-container">
                                <div class="team-image-placeholder">
                                    <span class="team-initials">IN</span>
                                </div>
                                <div class="team-image-overlay"></div>
                            </div>
                            <div class="team-info">
                                <h3 class="team-name">Coordinadora de Investigación</h3>
                                <p class="team-title">Investigadora Senior</p>
                                <p class="team-description">
                                    Especialista en inclusión educativa y equidad en STEM
                                </p>
                                <div class="team-expertise">
                                    <span class="expertise-tag">Inclusión Educativa</span>
                                    <span class="expertise-tag">Equidad STEM</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Research Team Section -->
        <section class="bg-white py-20" aria-label="Equipo de investigación">
            <div class="max-w-[1140px] mx-auto px-10">
                <div class="text-center mb-16">
                    <h2 class="text-4xl font-bold text-cod_gray-900 mb-4">Investigadores</h2>
                    <p class="text-lg text-cod_gray-700 max-w-2xl mx-auto">
                        Nuestro equipo multidisciplinario de investigadores y académicos
                    </p>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
                    <!-- Researcher 1 -->
                    <div class="researcher-card group">
                        <div class="researcher-image-container">
                            <div class="researcher-image-placeholder">
                                <span class="researcher-initials">MC</span>
                            </div>
                        </div>
                        <div class="researcher-info">
                            <h4 class="researcher-name">Investigador 1</h4>
                            <p class="researcher-role">Magister en Educación</p>
                            <p class="researcher-focus">Tecnologías Emergentes</p>
                        </div>
                    </div>

                    <!-- Researcher 2 -->
                    <div class="researcher-card group">
                        <div class="researcher-image-container">
                            <div class="researcher-image-placeholder">
                                <span class="researcher-initials">AI</span>
                            </div>
                        </div>
                        <div class="researcher-info">
                            <h4 class="researcher-name">Investigadora 2</h4>
                            <p class="researcher-role">Doctora en Ciencias</p>
                            <p class="researcher-focus">Análisis de Datos</p>
                        </div>
                    </div>

                    <!-- Researcher 3 -->
                    <div class="researcher-card group">
                        <div class="researcher-image-container">
                            <div class="researcher-image-placeholder">
                                <span class="researcher-initials">RB</span>
                            </div>
                        </div>
                        <div class="researcher-info">
                            <h4 class="researcher-name">Investigador 3</h4>
                            <p class="researcher-role">Ingeniero de Software</p>
                            <p class="researcher-focus">Desarrollo Educativo</p>
                        </div>
                    </div>

                    <!-- Researcher 4 -->
                    <div class="researcher-card group">
                        <div class="researcher-image-container">
                            <div class="researcher-image-placeholder">
                                <span class="researcher-initials">LS</span>
                            </div>
                        </div>
                        <div class="researcher-info">
                            <h4 class="researcher-name">Investigadora 4</h4>
                            <p class="researcher-role">Psicóloga Educativa</p>
                            <p class="researcher-focus">Cognición y Aprendizaje</p>
                        </div>
                    </div>

                    <!-- Researcher 5 -->
                    <div class="researcher-card group">
                        <div class="researcher-image-container">
                            <div class="researcher-image-placeholder">
                                <span class="researcher-initials">JM</span>
                            </div>
                        </div>
                        <div class="researcher-info">
                            <h4 class="researcher-name">Investigador 5</h4>
                            <p class="researcher-role">Especialista en TIC</p>
                            <p class="researcher-focus">Innovación Pedagógica</p>
                        </div>
                    </div>

                    <!-- Researcher 6 -->
                    <div class="researcher-card group">
                        <div class="researcher-image-container">
                            <div class="researcher-image-placeholder">
                                <span class="researcher-initials">AD</span>
                            </div>
                        </div>
                        <div class="researcher-info">
                            <h4 class="researcher-name">Investigadora 6</h4>
                            <p class="researcher-role">Matemática Aplicada</p>
                            <p class="researcher-focus">Modelado Educativo</p>
                        </div>
                    </div>

                    <!-- Researcher 7 -->
                    <div class="researcher-card group">
                        <div class="researcher-image-container">
                            <div class="researcher-image-placeholder">
                                <span class="researcher-initials">FT</span>
                            </div>
                        </div>
                        <div class="researcher-info">
                            <h4 class="researcher-name">Investigador 7</h4>
                            <p class="researcher-role">Diseñador UX/UI</p>
                            <p class="researcher-focus">Experiencia de Usuario</p>
                        </div>
                    </div>

                    <!-- Researcher 8 -->
                    <div class="researcher-card group">
                        <div class="researcher-image-container">
                            <div class="researcher-image-placeholder">
                                <span class="researcher-initials">MR</span>
                            </div>
                        </div>
                        <div class="researcher-info">
                            <h4 class="researcher-name">Investigadora 8</h4>
                            <p class="researcher-role">Comunicadora Social</p>
                            <p class="researcher-focus">Divulgación Científica</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Students Section -->
        <section class="bg-cod_gray-100 py-20" aria-label="Estudiantes investigadores">
            <div class="max-w-[1140px] mx-auto px-10">
                <div class="text-center mb-16">
                    <h2 class="text-4xl font-bold text-cod_gray-900 mb-4">Estudiantes Investigadores</h2>
                    <p class="text-lg text-cod_gray-700 max-w-2xl mx-auto">
                        Los futuros líderes en investigación educativa que apoyan nuestros proyectos
                    </p>
                </div>

                <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4">
                    <!-- Student placeholders -->
                    <div class="student-card">
                        <div class="student-image-placeholder">
                            <span class="student-initials">E1</span>
                        </div>
                        <p class="student-name">Estudiante 1</p>
                        <p class="student-program">Pregrado</p>
                    </div>

                    <div class="student-card">
                        <div class="student-image-placeholder">
                            <span class="student-initials">E2</span>
                        </div>
                        <p class="student-name">Estudiante 2</p>
                        <p class="student-program">Maestría</p>
                    </div>

                    <div class="student-card">
                        <div class="student-image-placeholder">
                            <span class="student-initials">E3</span>
                        </div>
                        <p class="student-name">Estudiante 3</p>
                        <p class="student-program">Pregrado</p>
                    </div>

                    <div class="student-card">
                        <div class="student-image-placeholder">
                            <span class="student-initials">E4</span>
                        </div>
                        <p class="student-name">Estudiante 4</p>
                        <p class="student-program">Doctorado</p>
                    </div>

                    <div class="student-card">
                        <div class="student-image-placeholder">
                            <span class="student-initials">E5</span>
                        </div>
                        <p class="student-name">Estudiante 5</p>
                        <p class="student-program">Maestría</p>
                    </div>

                    <div class="student-card">
                        <div class="student-image-placeholder">
                            <span class="student-initials">E6</span>
                        </div>
                        <p class="student-name">Estudiante 6</p>
                        <p class="student-program">Pregrado</p>
                    </div>
                </div>
            </div>
        </section>

        <!-- Join Team Section -->
        <section class="bg-gradient-to-r from-Shiraz-700 to-daisy_bush-700 py-20" aria-label="Únete al equipo">
            <div class="max-w-[1140px] mx-auto px-10 text-center">
                <h2 class="text-4xl font-bold text-white mb-6">¿Quieres ser parte del equipo?</h2>
                <p class="text-xl text-cod_gray-200 mb-8 max-w-2xl mx-auto">
                    Estamos siempre en búsqueda de talento comprometido con la transformación 
                    de la educación STEM. Únete a nosotros en esta misión.
                </p>
                <div class="flex flex-col sm:flex-row gap-4 justify-center">
                    <a 
                        href="#contact"
                        class="bg-white text-Shiraz-700 px-8 py-4 rounded-lg font-semibold hover:bg-cod_gray-100 transition-all duration-300 transform hover:scale-105"
                    >
                        Contáctanos
                    </a>
                    <a 
                        href="/research"
                        class="border-2 border-white text-white px-8 py-4 rounded-lg font-semibold hover:bg-white hover:text-Shiraz-700 transition-all duration-300 transform hover:scale-105"
                    >
                        Ver Investigaciones
                    </a>
                </div>
            </div>
        </section>

        <!-- Contact Section -->
        <Contact />
    </main>

    <style>
        /* Team Cards Styles */
        .team-card {
            @apply relative h-full;
            perspective: 1000px;
        }

        .team-card-inner {
            @apply relative w-full h-full;
            @apply bg-white rounded-2xl shadow-lg;
            @apply transition-all duration-500 ease-in-out;
            @apply hover:shadow-2xl hover:transform hover:scale-105;
            @apply border border-cod_gray-200;
            @apply p-8 text-center;
            @apply min-h-[400px] flex flex-col;
        }

        .team-card:hover .team-card-inner {
            @apply border-Shiraz-300;
            box-shadow: 0 25px 50px rgba(168, 85, 247, 0.15);
        }

        .team-image-container {
            @apply relative mb-6 flex justify-center;
        }

        .team-image-placeholder {
            @apply w-32 h-32 rounded-full;
            @apply bg-gradient-to-br from-Shiraz-400 to-daisy_bush-400;
            @apply flex items-center justify-center;
            @apply text-white font-bold text-2xl;
            @apply shadow-lg transform transition-transform duration-300;
            @apply relative overflow-hidden;
        }

        /* Estilos para imágenes reales del equipo */
        .team-image,
        .researcher-image,
        .student-image {
            @apply w-32 h-32 rounded-full object-cover;
            @apply shadow-lg transform transition-transform duration-300;
            @apply border-4 border-white;
        }

        .researcher-image {
            @apply w-20 h-20;
        }

        .student-image {
            @apply w-16 h-16;
        }

        .team-card:hover .team-image-placeholder {
            @apply scale-110;
        }

        .team-card:hover .team-image,
        .researcher-card:hover .researcher-image,
        .student-card:hover .student-image {
            @apply scale-110;
        }

        .team-image-overlay {
            @apply absolute inset-0 rounded-full;
            @apply bg-gradient-to-br from-transparent via-white/20 to-transparent;
            @apply opacity-0 transition-opacity duration-300;
        }

        .team-card:hover .team-image-overlay {
            @apply opacity-100;
        }

        .team-initials {
            @apply relative z-10;
        }

        .team-info {
            @apply flex-1 flex flex-col justify-between;
        }

        .team-name {
            @apply text-xl font-bold text-cod_gray-900 mb-2;
            @apply transition-colors duration-300;
        }

        .team-card:hover .team-name {
            @apply text-Shiraz-700;
        }

        .team-title {
            @apply text-sm font-semibold text-daisy_bush-600 mb-4;
            @apply uppercase tracking-wide;
        }

        .team-description {
            @apply text-cod_gray-600 leading-relaxed mb-6 flex-1;
        }

        .team-expertise {
            @apply flex flex-wrap gap-2 justify-center;
        }

        .expertise-tag {
            @apply px-3 py-1 bg-cod_gray-100 text-cod_gray-700;
            @apply text-xs font-medium rounded-full;
            @apply transition-all duration-300;
        }

        .team-card:hover .expertise-tag {
            @apply bg-Shiraz-100 text-Shiraz-700;
        }

        /* Researcher Cards Styles */
        .researcher-card {
            @apply bg-white rounded-xl shadow-md;
            @apply transition-all duration-300;
            @apply hover:shadow-lg hover:transform hover:scale-105;
            @apply p-6 text-center;
            @apply border border-cod_gray-200;
        }

        .researcher-card:hover {
            @apply border-daisy_bush-300;
        }

        .researcher-image-container {
            @apply mb-4 flex justify-center;
        }

        .researcher-image-placeholder {
            @apply w-20 h-20 rounded-full;
            @apply bg-gradient-to-br from-daisy_bush-400 to-Shiraz-400;
            @apply flex items-center justify-center;
            @apply text-white font-bold text-lg;
            @apply shadow-md transition-transform duration-300;
        }

        .researcher-card:hover .researcher-image-placeholder {
            @apply scale-110;
        }

        .researcher-initials {
            @apply relative z-10;
        }

        .researcher-name {
            @apply font-semibold text-cod_gray-900 mb-1;
        }

        .researcher-role {
            @apply text-sm text-daisy_bush-600 font-medium mb-1;
        }

        .researcher-focus {
            @apply text-xs text-cod_gray-600;
        }

        /* Student Cards Styles */
        .student-card {
            @apply text-center transition-all duration-300;
            @apply hover:transform hover:scale-105;
        }

        .student-image-placeholder {
            @apply w-16 h-16 rounded-full mx-auto mb-3;
            @apply bg-gradient-to-br from-cod_gray-400 to-cod_gray-500;
            @apply flex items-center justify-center;
            @apply text-white font-medium text-sm;
            @apply shadow-md transition-transform duration-300;
        }

        .student-card:hover .student-image-placeholder {
            @apply scale-110;
            @apply bg-gradient-to-br from-Shiraz-400 to-daisy_bush-400;
        }

        .student-name {
            @apply font-medium text-cod_gray-900 text-sm mb-1;
        }

        .student-program {
            @apply text-xs text-cod_gray-600;
        }

        /* Animations */
        @keyframes float {
            0%, 100% { transform: translateY(0px); }
            50% { transform: translateY(-10px); }
        }

        .team-image-placeholder::before {
            content: '';
            @apply absolute inset-0 rounded-full;
            @apply bg-gradient-to-br from-white/30 to-transparent;
            @apply transition-opacity duration-300;
        }

        /* Responsive adjustments */
        @media (max-width: 768px) {
            .team-card-inner {
                @apply p-6 min-h-[350px];
            }
            
            .team-image-placeholder {
                @apply w-24 h-24 text-xl;
            }
            
            .researcher-image-placeholder {
                @apply w-16 h-16 text-base;
            }
        }

        /* Hover effects with staggered animations */
        .team-card:nth-child(1) .team-card-inner {
            animation-delay: 0.1s;
        }
        
        .team-card:nth-child(2) .team-card-inner {
            animation-delay: 0.2s;
        }
        
        .team-card:nth-child(3) .team-card-inner {
            animation-delay: 0.3s;
        }

        /* Pulse effect for image placeholders */
        .team-image-placeholder,
        .researcher-image-placeholder,
        .student-image-placeholder {
            position: relative;
        }

        .team-image-placeholder::after,
        .researcher-image-placeholder::after,
        .student-image-placeholder::after {
            content: '';
            @apply absolute inset-0 rounded-full;
            @apply bg-white/20;
            @apply opacity-0 scale-0;
            @apply transition-all duration-500;
        }

        .team-card:hover .team-image-placeholder::after,
        .researcher-card:hover .researcher-image-placeholder::after,
        .student-card:hover .student-image-placeholder::after {
            @apply opacity-100 scale-110;
        }
    </style>
</BaseLayout>
